<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/left_margin_big_10dp"
        android:layout_marginRight="@dimen/right_margin_big_10dp"
        android:layout_marginTop="@dimen/top_margin_big_10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pic_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <TextView
            android:id="@+id/add_pic_story_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/add_pic_story_tv_bg"
            android:gravity="center"
            android:padding="3dp"
            android:text="添加图片"
            android:textColor="@drawable/add_pic_story_tv_color_bg"
            android:textSize="30sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/add_pic_story_desc_et"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/bottom_margin_big_10dp"
        android:layout_marginLeft="@dimen/left_margin_big_10dp"
        android:layout_marginRight="@dimen/right_margin_big_10dp"
        android:layout_marginTop="@dimen/top_margin_normal_8dp"
        android:layout_weight="0.618"
        android:background="@drawable/create_xiongdilian_edit_bg"
        android:gravity="top|left"
        android:hint="请输入该图片描述"
        android:maxLength="200"
        android:padding="4dp"
        android:textColor="@color/secondary_text"
        android:textColorHint="@color/secondary_text"
        android:textSize="@dimen/text_font_size_title_16sp" />

</LinearLayout>