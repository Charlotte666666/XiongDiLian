<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/divider2"
    android:orientation="vertical">

    <View
        android:id="@+id/during_line"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/divider2" />

    <LinearLayout
        android:id="@+id/one_xiongdilian_post_item_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_margin_normal_8dp"
        android:layout_marginRight="@dimen/right_margin_normal_8dp"
        android:background="@drawable/one_xiongdilian_ll_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/padding_big_8dp">

            <ImageView
                android:id="@+id/post_man_head_iv"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/post_author_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/post_man_head_iv"
                android:layout_marginLeft="@dimen/left_margin_normal_8dp"
                android:layout_toRightOf="@id/post_man_head_iv"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_font_size_title_16sp" />

            <TextView
                android:id="@+id/post_create_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/post_man_head_iv"
                android:layout_below="@id/post_author_name_tv"
                android:layout_marginLeft="@dimen/left_margin_normal_8dp"
                android:layout_toRightOf="@id/post_man_head_iv"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/text_font_size_content_14sp" />

            <TextView
                android:id="@+id/comment_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableLeft="@mipmap/comment"
                android:drawablePadding="3dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxEms="5"
                android:singleLine="true"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/text_font_size_content_14sp" />

            <TextView
                android:id="@+id/praise_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/right_margin_normal_8dp"
                android:layout_toLeftOf="@id/comment_num_tv"
                android:drawableLeft="@mipmap/praise"
                android:drawablePadding="3dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxEms="5"
                android:singleLine="true"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/text_font_size_content_14sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/post_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_margin_normal_8dp"
            android:layout_marginRight="@dimen/right_margin_normal_8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_font_size_title_16sp" />

        <com.gu.baselibrary.view.MTextView
            android:id="@+id/post_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/bottom_margin_normal_8dp"
            android:layout_marginLeft="@dimen/left_margin_normal_8dp"
            android:layout_marginRight="@dimen/right_margin_normal_8dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_font_size_content_14sp" />

        <LinearLayout
            android:id="@+id/post_img_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/bottom_margin_normal_8dp"
            android:layout_marginLeft="@dimen/left_margin_normal_8dp"
            android:layout_marginRight="@dimen/right_margin_normal_8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/post_iv1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/post_iv2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/post_iv3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:scaleType="centerCrop" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>