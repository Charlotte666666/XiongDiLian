<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        layout="@layout/toolbar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/pic_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <TextView
            android:id="@+id/add_pic_story_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/add_pic_story_tv_bg"
            android:gravity="center"
            android:padding="3dp"
            android:text="添加图片"
            android:textColor="@drawable/add_pic_story_tv_color_bg"
            android:textSize="30sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/add_pic_story_desc_et"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="0.618"
        android:background="@drawable/create_xiongdilian_edit_bg"
        android:gravity="top|left"
        android:hint="请输入该图片描述"
        android:lines="5"
        android:maxLength="200"
        android:padding="2dp"
        android:textColor="@color/secondary_text"
        android:textColorHint="@color/secondary_text"
        android:textSize="18sp" />

</LinearLayout>