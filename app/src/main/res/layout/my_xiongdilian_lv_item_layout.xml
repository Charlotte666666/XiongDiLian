<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/divider2"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/xiongdilian_item_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_margin_normal_8dp"
        android:layout_marginRight="@dimen/right_margin_normal_8dp"
        android:layout_marginTop="@dimen/top_margin_normal_8dp"
        android:background="@drawable/one_xiongdilian_ll_bg"
        android:orientation="horizontal"
        android:padding="@dimen/padding_big_8dp">

        <ImageView
            android:id="@+id/xiongdilian_headimg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/xiongdilian_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/left_margin_normal_8dp"
                android:ellipsize="end"
                android:gravity="top|left"
                android:maxEms="7"
                android:singleLine="true"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_font_size_title_16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/xiongdilian_desc"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/left_margin_normal_8dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/text_font_size_content_14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/people_num_iv"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="@dimen/left_margin_normal_8dp"
                    android:contentDescription="@string/my_xiongdilian_people1"
                    android:src="@mipmap/people1" />

                <TextView
                    android:id="@+id/people_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/left_margin_normal_8dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/text_font_size_small_12sp" />

                <ImageView
                    android:id="@+id/post_num_iv"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="@dimen/left_margin_normal_8dp"
                    android:contentDescription="@string/my_xiongdilian_post1"
                    android:src="@mipmap/post1" />

                <TextView
                    android:id="@+id/post_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/left_margin_normal_8dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/text_font_size_small_12sp" />
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/xiongdilian_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="6"
            android:singleLine="true"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/text_font_size_small_12sp" />
    </LinearLayout>

</LinearLayout>